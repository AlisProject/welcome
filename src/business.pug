include includes/header

// Navbar
body
  include includes/navbar

  include mixin/mail_form

  .p-page.p-page-business
    main.l-main
      .p-cover-header.p-cover-header--business.js-cover-header
        h2.p-cover-header__title BUSINESS

      .container-fluid
        .p-block.p-block--xs.u-pb-0
          .p-title.p-title--center
            h3.p-title__header
              | #{business.header.body_line}
            p.p-title__body #{business.body}
            h3.p-title__header
              | #{business.service.header.body_line}
        .p-block.u-pt-0
          .p-technology-cards
            include mixin/technology_card
            a.p-technology-card.p-technology-card--blockchain
              +technology_card(
              business.service.blockchain.name,
              business.service.blockchain.body_line)
            a.p-technology-card.p-technology-card--community
              +technology_card(
              business.service.community.name,
              business.service.community.body_line)
            a.p-technology-card.p-technology-card--serverless
              +technology_card(
              business.service.serverless.name,
              business.service.serverless.body_line)
        .p-title.p-title--center
          h3.p-title__header 
            |#{business.usecase.header.body_line}
          ul.p-feature-list
            li.p-usecase-list__item
              p.p-usecase-list__item-body
                | #{business.usecase.usecase_list.item1_body1}
                br
                | #{business.usecase.usecase_list.item1_body2}
                br
                | #{business.usecase.usecase_list.item1_body3}
            li.p-usecase-list__item
              p.p-usecase-list__item-body
                | #{business.usecase.usecase_list.item2_body1}
                br
                | #{business.usecase.usecase_list.item2_body2}
                br
                | #{business.usecase.usecase_list.item2_body3}    
        .p-block.p-block--xs.u-pb-0
          .p-title.p-title--center
            h3.p-title__header
              | #{business.contact.header.body_line}
            p.p-contact-text #{business.contact.body}
            br
            br
            .text-center
              a.p-product__button(href=contact_url.contact, target="_blank") #{business.contact.body_2}

        .p-block.p-block--xs
          .p-title.p-title--center
            h3.p-title__header
              | #{technology.header.body_line_1}
            p.p-title__body #{technology.body}
        .p-block.u-pt-0
          .p-technology-cards
            include mixin/technology_card
            a(href=technology_url.blockchain, target="_blank").p-technology-card.p-technology-card--blockchain
              +technology_card(
              technology.blockchain.name,
              technology.blockchain.body_line_1,
              technology.blockchain.body_line_2,
              technology.blockchain.body_line_3)
            a(href=technology_url.serverless, target="_blank").p-technology-card.p-technology-card--serverless
              +technology_card(
              technology.serverless.name,
              technology.serverless.body_line_1,
              technology.serverless.body_line_2,
              technology.serverless.body_line_3)
            a(href=technology_url.frontend, target="_blank").p-technology-card.p-technology-card--frontend
              +technology_card(
              technology.frontend.name,
              technology.frontend.body_line_1,
              technology.frontend.body_line_2,
              technology.frontend.body_line_3)

        // stackshare
        .p-block.p-block--xs
          .p-title.p-title--center
            h5.p-title__header #{technology.header.stackshare}
          a(frameborder='0', data-theme='light', data-layers='1,2,3,4', data-stack-embed='true',
          href='https://embed.stackshare.io/stacks/embed/bee2ce98ac4c2e78aedbd0412b544a')
          script(async='', src='https://cdn1.stackshare.io/javascripts/client-code.js', charset='utf-8')

  // Footer
  #meetus
  include includes/footer

  // generated by webpack
  script(type="text/javascript", src='/js/low_priority_index.js')
