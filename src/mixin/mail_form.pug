mixin mail_form
  link(href="//cdn-images.mailchimp.com/embedcode/horizontal-slim-10_7.css", rel="stylesheet", type="text/css")
  style(type="text/css").
    #mc_embed_signup {
      background: #fff;
      clear: left;
      font: 14px Helvetica, Arial, sans-serif;
      width: 100%;
    }
  #mc_embed_signup
    form#mc-embedded-subscribe-form.validate(action="//alismedia.us16.list-manage.com/subscribe/post?u=bd653897fc5dd1bf68533972b&id=2ad006a58b", method="post", name="mc-embedded-subscribe-form", target="_blank", novalidate="")
      #mc_embed_signup_scroll
        input#mce-EMAIL.email(type="email", value="", name="EMAIL", placeholder="email address", required="")
        // real people should not fill this in and expect good things - do not remove this or risk form bot signups
        div(style="position: absolute; left: -5000px;", aria-hidden="true")
          input(type="text", name="b_bd653897fc5dd1bf68533972b_2ad006a58b", tabindex="-1", value="")
        |
        .clear
          input#mc-embedded-subscribe.button(type="submit", value="Subscribe", name="subscribe")
