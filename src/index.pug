include includes/header

// Navbar
body
  include includes/navbar

  include mixin/mail_form

  .p-index
    main.l-main
      // Cover
      include includes/cover

      .container-fluid
        // ビジネス概要
        .p-block.p-block--xs.u-pb-0
          .p-title.p-title--center
            h3.p-title__header
              | #{business.header.body_line}
            p.p-title__body #{business.body}
            // サービス内容
            h3.p-title__header
              | #{business.service.header.body_line}
        .p-block.u-pt-0
          .p-business-cards
            include mixin/business_card
            div.p-business-card.p-business-card--serverless
              +business_card(
              business.service.serverless.title,
              business.service.serverless.sub_title,
              business.service.serverless.body_line)
            div.p-business-card.p-business-card--community
              +business_card(
              business.service.community.title,
              business.service.community.sub_title,
              business.service.community.body_line)
            div.p-business-card.p-business-card--blockchain
              +business_card(
              business.service.blockchain.title,
              business.service.blockchain.sub_title,
              business.service.blockchain.body_line)
        // 実装実績
        .p-block.p-block--xs.u-pt-0
          .p-title.p-title--center
            h3.p-title__header
              | #{business.achievement.header.body_line}
            p.p-title__body #{business.achievement.body}
          .p-achievement-cards
            include mixin/achievement_card
            div.p-achievement-card.p-achievement-card--kinyu
              +achievement_card(business.achievement.kinyu.name)
            div.p-achievement-card.p-achievement-card--butsuryu
              +achievement_card(business.achievement.butsuryu.name)
            div.p-achievement-card.p-achievement-card--it
              +achievement_card(business.achievement.it.name)
            div.p-achievement-card.p-achievement-card--infra
              +achievement_card(business.achievement.infra.name)
            div.p-achievement-card.p-achievement-card--entertainment
              +achievement_card(business.achievement.entertainment.name)

        // PARTNERS
        section.p-section.u-pt-0
          .p-title.p-title--center
            h3.p-title__header パートナー企業

          .p-partners
            a(href="https://alis.to/ALIS-official/articles/KmQ0nYMX1pog", target="blank")
              img.p-partners__img(src="/img/pc/logo_microsoft.png" alt='Microsoft')
              img.p-partners__img--sp(src="/img/sp/logo_microsoft.png" alt='Microsoft')
            a(href="https://alis.to/ALIS-official/articles/36561PLdz99Q", target="blank")
              img.p-partners__img(src="/img/pc/logo_hakuhodo.png" alt='Hakuhodo')
              img.p-partners__img--sp(src="/img/sp/logo_hakuhodo.png" alt='Hakuhodo')
            a(href="https://prtimes.jp/main/html/rd/p/000000120.000004355.html", target="blank")
              img.p-partners__img(src="/img/pc/logo_tribalmediahouse.png" alt='TribalMediaHouse')
              img.p-partners__img--sp(src="/img/sp/logo_tribalmediahouse.png" alt='TribalMediaHouse')


        // MEDIA APPEARANCE
        section.container-fluid.p-section
          .p-title.p-title--center
            h3.p-title__header メディア
          // media logos
          .p-media-logos
            a
              img(src="/img/sp/logo_nhk.png", alt='NHK')
            a
              img(src="/img/sp/logo_ntv.png", alt='日本テレビ')
            a
              img(src="/img/sp/logo_cnet.png", alt='Cnet Japan')
            a
              img(src="/img/sp/logo_forbes.png", alt='Forbes Japan')
            a
              img(src="/img/sp/logo_nikkei.png", alt='日本経済新聞')
            a
              img(src="/img/sp/logo_toyokeizai.png", alt='東洋経済')
            a
              img(src="/img/sp/logo_chuokolon.jpg", alt='中央公論')
            a
              img(src="/img/sp/logo_itmedia.png" alt='ITMedia')

        // コンタクト
        .p-block.p-block--xs.u-pb-0
          .p-title.p-title--center
            h3.p-title__header
              | #{business.contact.header.body_line}
            p.p-contact-text #{business.contact.body}
            br
            br
            .text-center
              a.p-product__button(href=contact_url.contact, target="_blank") #{business.contact.body_2}

  // Footer
  #meetus
  include includes/footer

  // generated by webpack
  script(type="text/javascript", src='/js/low_priority_index.js')
