include includes/header

// Navbar
body
  include includes/navbar

  include mixin/mail_form

  .p-index
    main.l-main
      img(src="/img/pc/top_sp_en.png").p-index__img.is-en.js-cover-iphone
      // Cover
      include includes/cover

      // ABOUT
      section.container-fluid.p-section
        .p-title.p-title--ourproject
          .p-title__header #{project.header}
          .p-title__body
            | #{project.body1}

          ul.p-feature-list(data-scroll="js-cover-iphone")
            li.p-feature-list__item
              p.p-feature-list__item-body
                | #{project.feature_list.item1_body1}
                br
                | #{project.feature_list.item1_body2}
            li.p-feature-list__item
              p.p-feature-list__item-body
                | #{project.feature_list.item2_body1}
                br.u-md-only
                | #{project.feature_list.item2_body2}
                br.u-md-none
                | #{project.feature_list.item2_body3}
            li.p-feature-list__item
              p.p-feature-list__item-body
                | #{project.feature_list.item3_body1}
                br
                | #{project.feature_list.item3_body2}


      // MEDIA APPEARANCE
      section.container-fluid.p-section
        .p-title.p-title--nobody
          h3.p-title__header MEDIA APPEARANCE
        // media logos
        .p-media-logos
          a
            img(src="/img/sp/logo_nhk.png", alt='NHK')
          a(href="https://japan.cnet.com/article/35106279/", target="blank")
            img(src="/img/sp/logo_cnet.png", alt='Cnet Japan')
          a(href="https://forbesjapan.com/articles/detail/17547", target="blank")
            img(src="/img/sp/logo_forbes.png", alt='Forbes Japan')
