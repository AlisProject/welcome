include includes/header

// Navbar
body
  include includes/navbar

  include mixin/mail_form

  .p-page.p-page-product
    main.l-main
      .p-cover-header.p-cover-header--product.js-cover-header
        h2.p-cover-header__title PRODUCT

      .container-fluid
        .p-block.p-block--xs
          .p-product-block
            .p-product-block__text
              h3.p-title__header #{product.header}
              p.p-title__body
                | #{product.body_line_1}
                | #{product.body_line_2}
            .p-product-block__img-wrapper
              img.p-product-block__img(src="/img/pc/img_product.png" alt='ALIS MOCK')
          .text-center
            .p-product__btns
              a.p-product__button(href=product.mock_pc.url, target="_blank") #{product.mock_pc.btn_text}
              br
              br
              a.p-product__link(href=sns_url.googledatastudio, target="_blank") #{product.bi_status}
              br
              a.p-product__link(href=sns_url.github, target="_blank") #{product.dev_status}

        .p-block.p-block--xs
          .p-title.p-title--center
            h3.p-title__header #{openb.header}
            p.p-title__body #{openb.body}
          .text-center.u-ja-only
            a.p-button.p-button--lg(href=openb.url, target='_blank') #{openb.btn_text}

  // Footer
  #meetus
  include includes/footer

  // generated by webpack
  script(type="text/javascript", src='/js/low_priority_index.js')
