include includes/header

// Navbar
body
  include includes/navbar

  include mixin/mail_form

  .p-page.p-page-product
    main.l-main
      .p-cover-header.p-cover-header--product.js-cover-header
        h2.p-cover-header__title PRODUCT

      .container-fluid
        .p-block.p-registration-block
          .p-title.p-title--center.text-center 
            h3.p-title__header #{registration.header}
            p.p-title__body
              | #{registration.body_line_1}
              | #{registration.body_line_2}
              br.u-pc-only
              | #{registration.body_line_3}
            a.p-button.p-button--lg.u-ja-only.u-ja-only--inline-block(href=registration.url, target='_blank') #{button.applyforbeta}

        .p-block
          .p-title.p-title--center 
            h3.p-title__header #{closedb.header}
            p.p-title__body #{closedb.body}
          .text-center
            a.p-button.p-button--lg(href="", target='_blank') #{button.detail}

        .row.p-block
          .col-md-4
            h3.p-title__header #{product.header}
            p.p-title__body
              | #{product.body_line_1}
              br
              | #{product.body_line_2}
          .col-md-8.text-center
            img.p-product__img(src="/img/pc/img_product.png" alt='ALIS MOCK')
          .col-md-12.text-center
            .p-product__btns
              a.p-product__button(href="#") #{button.mock_pc}
              a.p-product__button(href="#") #{button.mock_sp}
              br
              a.p-product__link(href=sns_url.github, target="_blank") #{product.link}

  .l-overlay#js-overlay
    include mixin/popup_registration
    +popup_registration

  // Footer
  #meetus
  include includes/footer

  // generated by webpack
  script(type="text/javascript", src='/js/low_priority_index.js')
