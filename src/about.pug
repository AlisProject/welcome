include includes/header

// Navbar
body
  include includes/navbar

  include mixin/mail_form

  main.l-main.p-page
    .p-cover-header.p-cover-header--about
      h2.p-cover-header__title ABOUT

    .container-fluid
      .p-block
        .p-subtitle--nobody
          h3.p-subtitle__header VISION
        .row.p-vision
          .col-md-12
            p.p-vision__statement #{about.vision}

      .p-block
        .p-subtitle--nobody
          h3.p-subtitle__header MISSION
        .row.p-mission
          .col-md-4
            p.p-mission__body #{about.mission.body1}
          .col-md-4
            p.p-mission__body #{about.mission.body2}
          .col-md-4
            p.p-mission__body #{about.mission.body3}

      .p-block
        .p-subtitle--nobody 
          h3.p-subtitle__header VALUE
        .row
          .col-md-4.p-value
            .p-value__img-wrapper
              img.p-value__img(src="/img/pc/about_alliance_wisdom.png" alt="alliance and wisdom")
            p.p-value__body #{about.value.body1}
          .col-md-4
            .p-value__img-wrapper
              img.p-value__img(src="/img/pc/about_alliance_wisdom.png" alt="alliance and wisdom")
            p.p-value__body #{about.value.body2}
          .col-md-4
            .p-value__img-wrapper
              img.p-value__img(src="/img/pc/about_alliance_wisdom.png" alt="alliance and wisdom")
            p.p-value__body #{about.value.body3}

  // Footer
  #meetus
  include includes/footer

  // generated by webpack
  script(type="text/javascript", src='/js/low_priority_index.js')
