include includes/header

// Navbar
body
  include includes/navbar

  include mixin/mail_form

  .p-page
    main.l-main
      .p-cover-header.p-cover-header--about.js-cover-header
        h2.p-cover-header__title ABOUT

      .container-fluid
        .p-block
          .p-title--nobody.p-title--center
            h3.p-title__header VISION
          .row.p-vision
            .col-md-12
              p.p-vision__statement 
                | #{about.vision.body_line_1}
                br.u-sp-only
                | #{about.vision.body_line_2}

        .p-block
          .p-title--nobody.p-title--center
            h3.p-title__header MISSION
          .p-mission
            .row
              .col-md-4
                p.p-mission__body #{about.mission.item1}
              .col-md-4
                p.p-mission__body #{about.mission.item2}
              .col-md-4
                p.p-mission__body #{about.mission.item3}

        .p-block
          .p-title--nobody.p-title--center 
            h3.p-title__header VALUE
          .p-value
            .row
              .col-md-4
                h4.p-value__item-header Alliance and Wisdom
                p.p-value__body #{about.value.item1}
              .col-md-4
                h4.p-value__item-header Keep it short and simple
                p.p-value__body #{about.value.item2}
              .col-md-4
                h4.p-value__item-header 言葉よりプロダクトで議論する
                p.p-value__body #{about.value.item3}
            .row
              .col-md-4
                h4.p-value__item-header ユーザーのWowを創る
                p.p-value__body #{about.value.item1}
              .col-md-4
                h4.p-value__item-header Be the first penguin
                p.p-value__body #{about.value.item2}
              .col-md-4
                h4.p-value__item-header Passion as subject
                p.p-value__body #{about.value.item3}

  // Footer
  #meetus
  include includes/footer

  // generated by webpack
  script(type="text/javascript", src='/js/low_priority_index.js')
