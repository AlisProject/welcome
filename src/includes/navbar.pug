extends _navbar

block links
  #navbar.navbar-collapse.collapse
    ul.nav.navbar-nav
      li
        a.smooth-anchor(href='#introduction') #{navbar.introduction}
      li.dropdown.nav__whitepaper
        a(href='#' data-toggle="dropdown")
          | #{navbar.whitepaper}
          span.caret
        ul.dropdown-menu
          li
            a(href='https://alisproject.github.io/whitepaper/whitepaper_v1.01.pdf', target="blank") English
          li
            a(href='https://alisproject.github.io/whitepaper/whitepaper_v1.01_ja.pdf', target="blank") 日本語
          li
            a(href='https://alisproject.github.io/whitepaper/whitepaper_v1.01_zh.pdf', target="blank") 中文
      li
        a.smooth-anchor(href='https://trello.com/b/XH5jh4DT/alis-public-roadmap', target="blank") #{navbar.roadmap}
      li
        a.smooth-anchor(href='#ico') #{navbar.ico}
      li
        a.smooth-anchor(href='#team') #{navbar.team}
      li
        a.smooth-anchor(href='#meetus') #{navbar.meetus}
      li
        a.btn.btn-social-icon.btn-lg.navbar__sns-links__link(href='https://twitter.com/ALIS_media', target='blank')
          i.fa.fa-twitter
        a.btn.btn-social-icon.btn-lg.navbar__sns-links__link(href='https://alis-slack.herokuapp.com/', target='blank')
          i.fa.fa-slack
      li
        select.form-control.nav__language(onchange="location = this.options[this.selectedIndex].value;")
          option #{navbar.language}
          option(value='/') English
          option(value='/ja/index.html') 日本語
          option(value='/zh/index.html') 中文
