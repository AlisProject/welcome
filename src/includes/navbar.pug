extends _navbar

block links
  button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar',
  aria-expanded='false', aria-controls='navbar')
    span.sr-only Toggle navigation
    span.icon-bar
    span.icon-bar
    span.icon-bar
  a.navbar-brand(href='/')
    img.navbar-brand__logo(src='/img/logo_header.png', alt='ALIS')
  #navbar.navbar-collapse.collapse
    ul.nav.navbar-nav
      li
        a.smooth-anchor(href='#service-information') #{navbar.whitepaper}
      li
        a.smooth-anchor(href='#service-information') #{navbar.roadmap}
      li
        a.smooth-anchor(href='#ico') #{navbar.ico}
      li
        a.smooth-anchor(href='#team') #{navbar.team}
      li
        select.form-control.nav__language(onchange="location = this.options[this.selectedIndex].value;")
          option #{navbar.language}
          option(value='/') English
          option(value='/zh') 中文
