  "license": "MIT",
  "dependencies": {
    "bootstrap": "^3.3.7",
    "font-awesome": "^4.7.0",
    "jquery": "^3.2.1",
    "particles.js": "^2.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "bootstrap-social": "^5.1.1",
    "browser-sync": "^2.18.12",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.0.0",
    "file-loader": "^0.11.2",
    "fs": "^0.0.1-security",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-data": "^1.2.1",
    "gulp-load-plugins": "^1.5.0",
    "gulp-plumber": "^1.1.0",
    "gulp-pug": "^3.3.0",
    "js-yaml": "^3.8.4",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "pug": "^2.0.0-rc.2",
    "pug-lint": "^2.4.0",
    "pug-loader": "^2.3.0",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.8",
    "webpack": "3.0.0",
    "webpack-dev-server": "^2.4.5"
  },
  "scripts": {
    "build:production": "yarn run webpack -p && yarn gulp pug:build",
    "build:develop": "yarn run webpack -p && yarn gulp pug:build",
    "watch": "npm-run-all --parallel watch:*",
    "watch:webpack": "webpack-dev-server --hot --inline --devtool source-map",
    "watch:gulp": "yarn gulp watch",
    "clean": "rm -fr ./node_modules && yarn && rm -fr ./public/*",
    "clean:generates": "rm -fr ./node_modules && rm -fr ./public/*",
    "clean:public": "rm -fr public/*",
    "install:develop": "yarn install --modules-folder ./public/node_modules",
    "install:production": "yarn install --modules-folder ./public/node_modules --prod",
    "test": "yarn pug-lint ./src && yarn eslint ./src/js",
    "s3sync:develop": "aws s3 sync public s3://${S3_BUCKET_DEVELOP}/ --delete --acl public-read-write",
    "s3sync:staging": "aws s3 sync public s3://${S3_BUCKET_STAGING}/ --delete --acl public-read-write",
    "s3sync:production": "aws s3 sync public s3://alismedia.jp/ --delete --acl public-read-write",
    "deploy": "yarn clean:public && yarn install:develop && yarn build:develop && yarn s3sync:develop",
    "deploy:production": "yarn clean:public && yarn install:develop && yarn build:develop && yarn s3sync:develop"
  }
}
